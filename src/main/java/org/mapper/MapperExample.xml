<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.mapper.XxxMapper">
    <select id="queryPersonById" parameterType="Integer" resultType="Person">
        SELECT id, name, age FROM person WHERE id = #{id}
    </select>
</mapper>